#include <iostream>
using namespace std;

// Function: Call by value
int incr5(int a) {
    return a + 5;
}

// Function: Call by reference
void incr5_ref(int &a) {
    a = a + 5;
}

int main() {
    int x, y;
    cout << "Enter a number: ";
    cin >> x;
    y = incr5(x);
    cout << "The increased value of " << x << " is " << y << endl;

    int n;
    cout << "Enter another number: ";
    cin >> n;
    incr5_ref(n);
    cout << "The increased value (by reference) is " << n << endl;

    return 0;
}